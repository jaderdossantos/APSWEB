
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Usuario {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  nome     String
  senha  String
}

model Musica {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  nome    String
  artista String

  @@unique([nome, artista]) 
}

model Manga {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  manga String 
  capitulo  Int

  @@unique([manga, capitulo]) 
}